<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Newspaper</title>
  </head>
  <body>

    <div class="container mt-5">
        <div class="row center">
            <div class="col">
                <h1> <%= @location %> </h1>
                <p1> <%= @lat %>, <%= @lng %> </p1>
            </div>
        </div>
    </div>

    
    <div class="container mt-5 center">
        <div class="row center">
            <div class="col">
            <h1> Weather</h1>
            </div>
        </div>

        <div class="row center">
            <div class="col">
                <div class="accordion" id="accordionExample">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Current
                                </button>
                            </h2>
                        </div>

                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <strong>Current:</strong> Today's temperature is <strong> <%= @current_temp %> F </strong>and <strong> <%= @current_sum %></strong>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Forecast
                                </button>
                            </h2>
                        </div>
                        
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <div class="card-body">
                                <% i = 1 %>
                                <% for weather_on_day in @forecastarray %>
                                    <% @dailytemparray << weather_on_day["temperatureHigh"] %>
                                    <% @dailysumarray << weather_on_day["summary"] %>
                                    <p1><strong>Day <%= i %>:</strong> The temperature  on Day <%=i%> is <strong> <%= weather_on_day["temperatureHigh"] %> F </strong>and <strong> <%= weather_on_day["summary"] %></strong></p1>
                                    <br>
                                    <% i = i+1 %>
                                <% end %>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>
        </div>   
    </div>
    
    <div class="container mt-5 center">
        <div class="row center">
            <div class="col">
                <h1> News Headlines </h1>
            </div
        </div>

        <div class="row center">
            <div class="col">
                <% j =1%>
                <% for articlenumber in @newsarray %>
                    <p> <strong> Headline <%= j %>:</strong> <%= articlenumber["title"] %> </p>
                    <p><strong> URL: </strong><%= articlenumber["url"] %></p>
                    <br>
                    <% j = j+1 %>
                <% end %>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>